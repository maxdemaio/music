---
export interface Props {
  authorAndSource: string;
}

const { authorAndSource } = Astro.props;
---

<style>
  /* give it a height of 4 lines, but clamp text to 3 */
  .multi-trunc {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    --max-lines: 5;
    --lh: 1.75rem;
    max-height: calc(var(--lh) * var(--max-lines));
  }
</style>

<div class="flex flex-col w-60 gap-3">
  <blockquote
    class="text-lg multi-trunc pl-4 w-full border-l dark:border-neutral-100 border-black flex-col items-center"
  >
    <slot />
  </blockquote>
  <cite class="font-medium">{authorAndSource}</cite>
</div>
