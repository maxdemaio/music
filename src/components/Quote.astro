---
export interface Props {
  authorAndSource: string;
}

const { authorAndSource } = Astro.props;
---

<div class="flex flex-col w-60 gap-3">
  <blockquote
    class="text-lg pl-4 w-full border-l dark:border-neutral-100 border-neutral-900 flex-col items-center"
  >
    <slot />
  </blockquote>
  <cite class="font-medium">{authorAndSource}</cite>
</div>
